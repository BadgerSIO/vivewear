{% style %}
.not-found-image {
max-width: 100px;
height: auto;
margin-bottom: 20px;
}
#not-found-page{{ section.id }} {
padding: {{ section.settings.section_padding_desktop }}px 0;
}
@media (max-width: 1024px) {
#not-found-page{{ section.id }} {
padding: {{ section.settings.section_padding_tablet }}px 0;
}
}
@media (max-width: 767px) {
#not-found-page{{ section.id }} {
padding: {{ section.settings.section_padding_mobile }} 0;
}
}
{% endstyle %}
<section id="not-found-page{{section.id}}">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="mb-4 mx-auto">
                    {% if section.settings.section_image != blank %}
                    {{ section.settings.section_image | image_url: width: 700 | image_tag: alt: '404 Image', class:
                    'img-fluid not-found-image' }}
                    {% endif %}
                    <h1>{{ section.settings.section_title }}</h1>
                </div>
                <a class="vivewear_btn_primary" href="{{section.settings.btn_link}}">{{ section.settings.btn_label
                    }}</a>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
"name": "404 Page",
"settings": [
{
"type": "header",
"content": "404 Page Settings"
},
{
"type": "text",
"id": "section_title",
"label": "404 Title",
"default": "Page not found"
},
{
"type": "image_picker",
"id": "section_image",
"label": "404 Image"
},
{
"type": "text",
"id": "btn_label",
"label": "Button Label",
"default": "Go back"
}, {
"type": "url",
"id": "btn_link",
"label": "Button Link",
"default": "/"
}, {
"type": "header",
"content": "Section style"
}, {
"type": "range",
"id": "section_padding_desktop",
"label": "Desktop Padding",
"default": 20,
"min": 0,
"max": 100,
"unit": "px",
"step": 1
}, {
"type": "range",
"id": "section_padding_tablet",
"label": "Tablet Padding",
"default": 20,
"min": 0,
"max": 100,
"unit": "px",
"step": 1
}, {
"type": "range",
"id": "section_padding_mobile",
"label": "Mobile Padding",
"default": 20,
"min": 0,
"max": 100,
"unit": "px",
"step": 1
}
]
}
{% endschema %}