 :root {
      --primary-btn-background: {{ settings.primary_btn_background }};
      --primary-btn-hover-background: {{ settings.primary_btn_hover_background }};
      --primary-btn-text: {{ settings.primary_btn_text }};
      --primary-btn-hover-text: {{ settings.primary_btn_hover_text }};
      --secondary-btn-background: {{ settings.secondary_btn_background }};
      --secondary-btn-hover-background: {{ settings.secondary_btn_hover_background }};
      --secondary-btn-text: {{ settings.secondary_btn_text }};
      --secondary-btn-hover-text: {{ settings.secondary_btn_hover_text }};
    }
     /* Load and apply heading font */
  {{ settings.font_heading | font_face }}
  h1, h2, h3, h4, h5, h6 {
    font-family: {{ settings.font_heading.family }};
    font-weight: {{ settings.font_heading.weight }};
    font-style: {{ settings.font_heading.style }};
  }

  /* Load and apply body font */
  {{ settings.font_body | font_face }}
  body, p, a {
    font-family: {{ settings.font_body.family }};
    font-weight: {{ settings.font_body.weight }};
    font-style: {{ settings.font_body.style }};
  }
 
 a, button{
  text-decoration: none!important;
  border: none;
  display: inline-block;
  text-align: center;
}
.carousel-item::before {
    position: absolute;
    content: "";
    background: #0000005c;
    width: 100%;
    height: 100%;
}
.secondary_product_card_img{
  display: none;
}
.multi_img_product:hover .primary_product_card_img{
  display: none;
}
.multi_img_product:hover .secondary_product_card_img{
  display: block!important;
}
[class*="vivewear_btn"] {
  font-size: 16px;
  border-radius: 2px;
  padding: 10px 30px;
  transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  border: 1px solid transparent;
  cursor: pointer;
}

.vivewear_btn_primary{
  background: var(--primary-btn-background);
  color: var(--primary-btn-text);
 
}
.vivewear_btn_primary:hover{
  background: var(--primary-btn-hover-background);
  color: var(--primary-btn-hover-text);
}
.vivewear_btn_secondary{
  background: var(--secondary-btn-background);
  color: var(--secondary-btn-text);
 
}
.vivewear_btn_secondary:hover{
  background: var(--secondary-btn-hover-background);
  color: var(--secondary-btn-hover-text);
}